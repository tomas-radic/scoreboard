<%= form_for @tournament do |f| %>
  <div class="row">
    <div class="col-md-7">
      <div class="form-group">
        <%= f.label :label %>
        <%= f.text_field :label, class: 'form-control', autofocus: true %>
      </div>
    </div>
    <div class="col-md-5 d-flex align-items-center">
      <div class="form-group form-check">
        <%= f.check_box :public_score_update, class: 'form-check-input' %>
        <label class="form-check-label" for="tournament_public_score_update">Public score update</label>
      </div>
    </div>
  </div>
  <hr/>
  <div id="courts">
    <div class="row">
      <div class="col-md-3">
        <%= f.fields_for :courts do |cf| %>
          <%= render 'court_fields', f: cf %>
        <% end %>
        <div class="links">
          <hr>
          <%= link_to_add_association 'add court', f, :courts, class: 'btn btn-sm btn-outline-success' %>
        </div>
      </div>
    </div>
  </div>

  <p class="text-right">
    <%= link_to 'Back', root_path, class: 'btn btn-lg btn-outline-success my-1' %>
    <%= f.submit 'Submit', class: 'btn btn-lg btn-success my-1' %>
  </p>
<% end %>

<%= render 'scripts' %>
