<%= render 'shared/header' %>
<%= render 'shared/navbar' %>
<p>
  <% if policy(Match).create? %>
    <%= link_to 'Add match', new_tournament_match_path(@tournament), class: 'btn btn-sm btn-success my-1' %>
  <% end %>
  <span class="float-right"><strong>All planned matches</strong></span>
</p>
<% if @matches.any? %>
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th scope="col"></th>
          <th scope="col">Label</th>
          <th scope="col">Court</th>
          <th scope="col">Score</th>
          <th scope="col">Not Before</th>
        </tr>
      </thead>
      <tbody>
        <% @matches.each do |match| %>
          <%= all_matches_row_for match, @matches_updatable, @scores_updatable %>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <p>No matches.</p>
<% end %>
